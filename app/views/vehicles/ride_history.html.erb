<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Ride History for Vehicle: <span class="text-blue-600"><%= @vehicle.model.capitalize %></span></h1>

  <% if @bookings.any? %>
    <div class="space-y-4"> 
      <% @bookings.each do |booking| %>
        <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
          <p class="mb-1"><strong class="font-semibold text-gray-800">From:</strong> <span class="text-gray-700"><%= booking.start_location %></span></p>
          <p class="mb-1"><strong class="font-semibold text-gray-800">To:</strong> <span class="text-gray-700"><%= booking.end_location %></span></p>
          <p class="mb-1"><strong class="font-semibold text-gray-800">Customer:</strong> <span class="text-gray-700"><%= booking.user.name %></span></p>
          <p class="mb-1"><strong class="font-semibold text-gray-800">Price:</strong> <span class="text-gray-700">â‚¹<%= booking.price %></span></p>
          <p class="mb-1"><strong class="font-semibold text-gray-800">Date:</strong> <span class="text-gray-700"><%= booking.booking_date.strftime('%d-%b-%Y %I:%M %p') %></span></p>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center p-6 bg-white rounded-lg shadow-md border border-gray-200">
      <p class="text-gray-700 text-lg">No completed rides for this vehicle.</p>
    </div>
  <% end %>
</div>