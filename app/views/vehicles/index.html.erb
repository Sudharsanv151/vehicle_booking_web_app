<div class="flex flex-wrap justify-center gap-5 p-5">
  <% @vehicles.each do |vehicle| %>
    <div class="flex flex-col justify-between border border-gray-300 rounded-lg p-4 shadow-md bg-white
                min-w-72 max-w-sm flex-grow-0 flex-shrink-0">
      <p class="mb-4 text-base leading-normal">
        <strong class="text-gray-800 text-lg"><%= vehicle.model %></strong> (<%= vehicle.vehicle_type %>) <br>
        <strong class="text-gray-800">Driver:</strong> <%= vehicle.driver.user.name%><br>
        <%# Rating: <> %>
        (Capacity: <%= vehicle.capacity %>)
      </p>
      <%= link_to "Book Now", new_booking_path(vehicle_id: vehicle.id), class: "inline-block bg-blue-600 hover:bg-blue-700 text-white py-2.5 px-4 rounded-md no-underline text-center mt-auto" %>
    </div>
  <% end %>
</div>
