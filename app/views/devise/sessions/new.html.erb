<div class="flex flex-col items-center justify-center min-h-screen bg-gray-50 p-6">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md border border-gray-200">
    
    <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name, role: params[:role])) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full mt-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full mt-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-sm text-gray-700" %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.submit "Log in", class: "w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-md shadow" %>
      </div>

    <% end %>

    <div class="text-sm text-center mt-4">
      <%= link_to "Don't have an account? Sign up", new_user_registration_path(role: params[:role]), class: "text-blue-600 hover:underline" %>
    </div>

  </div>
</div>
