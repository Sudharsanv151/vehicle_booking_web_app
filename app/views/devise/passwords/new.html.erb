<div class="flex flex-col items-center justify-center min-h-screen bg-gray-50 p-6">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md border border-gray-200">
    <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>


      <div class="mb-4">
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full mt-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm" %>
      </div>

      <%= f.submit "Send me reset password instructions", class: "w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-md shadow" %>
    <% end %>
  </div>
</div>
