<div class="flex flex-col bg-gray-100 p-6 mt-10">
  <h1 class="text-4xl font-extrabold text-gray-800 mb-10 text-center">Select Your Role</h1>

  <div class="flex flex-row items-center justify-center mt-10">
    <div class="px-6 bg-white rounded-2xl shadow-lg p-6 w-64 text-center transform transition hover:-translate-y-2 hover:shadow-2xl ">
      <%= link_to new_user_session_path(role: 'customer') do %>
        <img src="https://img.icons8.com/color/96/user.png" alt="Customer Icon" class="mx-auto mb-4" />
        <h2 class="text-2xl font-bold text-gray-800 mb-2">I'm a Customer</h2>
        <p class="text-gray-600 text-sm">Book rides and manage your trips easily.</p>
      <% end %>
    </div>
    <div class="px-6 bg-white rounded-2xl shadow-lg p-6 w-64 text-center transform transition hover:-translate-y-2 hover:shadow-2xl">
      <%= link_to new_user_session_path(role: 'driver') do %>
        <img src="https://img.icons8.com/color/96/driver.png" alt="Driver Icon" class="mx-auto mb-4" />
        <h2 class="text-2xl font-bold text-gray-800 mb-2">I'm a Driver</h2>
        <p class="text-gray-600 text-sm">Accept rides and earn on your schedule.</p>
      <% end %>
    </div>
 
  </div>
</div>
