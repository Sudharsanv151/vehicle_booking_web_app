<h1>Register as <%= @role %></h1>
<%= form_with url: users_path do %>
  <%= hidden_field_tag :role, @role %>
  <p>Name: <%= text_field_tag :name %></p>
  <p>Email: <%= email_field_tag :email %></p>
  <p>Password: <%= password_field_tag :password %></p>
  <p>Mobile: <%= text_field_tag :mobile_no %></p>

  <% if @role == 'customer' %>
    <p>Location: <%= text_field_tag :location %></p>
  <% else %>
    <p>Licence No: <%= text_field_tag :licence_no %></p>
  <% end %>
  <%= submit_tag "Register" %>
<% end %>