<div class="flex flex-col items-center justify-center min-h-screen bg-gray-50 p-6">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md border border-gray-200">
    <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Register as <%= @role.humanize %></h1>

    <%= form_with url: users_path, class: "space-y-5" do %>
      <%= hidden_field_tag :role, @role %>

      <div>
        <%= label_tag :name, "Name:", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= text_field_tag :name, nil, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= label_tag :email, "Email:", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= email_field_tag :email, nil, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= label_tag :password, "Password:", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= password_field_tag :password, nil, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= label_tag :mobile_no, "Mobile:", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= text_field_tag :mobile_no, nil, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <% if @role == 'customer' %>
        <div>
          <%= label_tag :location, "Location:", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= text_field_tag :location, nil, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
      <% else %>
        <div>
          <%= label_tag :licence_no, "Licence No:", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= text_field_tag :licence_no, nil, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
      <% end %>

      <%= submit_tag "Register", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2.5 px-4 rounded-md shadow-md text-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200 cursor-pointer" %>
    <% end %>
  </div>
</div>