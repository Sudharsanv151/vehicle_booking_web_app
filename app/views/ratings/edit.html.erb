<div class="flex flex-col items-center justify-center min-h-screen bg-gray-50 p-6">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md border border-gray-200">
    <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">Edit Rating</h2>

    <%= form_with model: @rating, local: true, class: "space-y-5" do |f| %>
      <% if @rating.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded text-sm">
          <ul class="list-disc list-inside mt-2">
            <% @rating.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :stars, "Stars (1-5):", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.number_field :stars, in: 1..5, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :comments, "Comments:", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :comments, rows: 4, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm resize-y" %>
      </div>

      <div class="flex justify-between space-x-2">
        <%= f.submit "Update Rating", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2.5 px-4 rounded-md shadow-md text-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200 cursor-pointer" %>
        <%= link_to "Cancel", customer_ride_history_path, class: "w-full bg-gray-400 hover:bg-gray-500 text-white font-semibold py-2.5 px-4 rounded-md shadow-md text-lg text-center" %>
      </div>
    <% end %>
  </div>
</div>
