<div class="max-w-7xl mx-auto px-4 py-4 mt-6">
  <h2 class="text-2xl font-bold mb-4 text-white">Booked Rides</h2>

  <% active_ongoing = @ongoing_bookings.reject { |b| b.cancelled_by.present? } %>
  <% cancelled_ongoing = @ongoing_bookings.select { |b| b.cancelled_by.present? } %>

  <% if active_ongoing.blank? %>
    <p class="text-white mb-4">You don't have any ongoing rides at the moment.</p>
  <% else %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mb-6">
      <% active_ongoing.each do |booking| %>
        <div class="bg-gradient-to-br from-gray-800 via-gray-800 to-gray-800 border border-gray-700 rounded-2xl shadow-lg overflow-hidden transform hover:scale-[1.02] hover:shadow-2xl transition-all duration-300 text-sm text-gray-200">
          <div class="relative group">
            <% if booking.vehicle.image.attached? %>
              <div class="overflow-hidden relative">
                <%= image_tag booking.vehicle.image, class: "w-full h-44 object-cover transition-transform duration-500 group-hover:scale-105 border-b border-gray-700" %>
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-black/20 to-transparent opacity-70 group-hover:opacity-80 transition-opacity duration-300 rounded-t-2xl"></div>
              </div>
            <% else %>
              <div class="w-full h-44 bg-gray-500 flex items-center justify-center text-gray-400 text-sm border-b border-gray-700 rounded-t-2xl">
                ğŸš˜ No Image Available
              </div>
            <% end %>

            <div class="absolute inset-0 rounded-t-2xl ring-1 ring-blue-400/10 group-hover:ring-blue-400/40 group-hover:shadow-[0_0_25px_rgba(56,189,248,0.3)] transition-all duration-500"></div>
          </div>

          <div class="p-5 flex flex-col flex-1 space-y-2">
            <div class="flex flex-wrap gap-2 mb-2">
              <span class="inline-block bg-gray-500/60 px-3 py-1 rounded-full text-gray-300 border border-gray-700">
                ğŸš© <strong>From:</strong> <%= booking.start_location.humanize %>
              </span>
              <span class="inline-block bg-gray-500/60 px-3 py-1 rounded-full text-gray-300 border border-gray-700">
                ğŸ <strong>To:</strong> <%= booking.end_location.humanize %>
              </span>
            </div>

            <p><strong class="text-gray-100">ğŸš˜ Vehicle:</strong> <%= booking.vehicle.model %></p>
            <p><strong class="text-gray-100">ğŸ‘¤ Customer:</strong> <%= booking.user.name %></p>
            <p><strong class="text-gray-100">ğŸ•“ Start:</strong> <%= booking.start_time.strftime("%d %b %Y, %I:%M %p") %></p>
            <p><strong class="text-gray-100">ğŸ’° Price:</strong> â‚¹<%= booking.price %></p>

            <% if booking.payment&.payment_status %>
              <span class="inline-block bg-green-800/40 border border-green-500 text-green-300 font-semibold px-3 py-1 rounded-full">
                âœ… Customer has made the payment
              </span>
              <%= button_to "Finish Ride", finish_booking_path(booking), method: :patch,
                    form: { onsubmit: "return confirm('Are you sure you want to finish this ride?');" },
                    class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-3 mt-2 rounded-lg shadow-md transition-all duration-200" %>

            <% elsif Time.current >= booking.start_time %>
              <span class="inline-block bg-yellow-800/40 border border-yellow-500 text-yellow-300 font-semibold px-3 py-1 rounded-full">
                âš¡ Waiting for customer payment...
              </span>
              <p class="text-blue-400 font-semibold italic mt-2">ğŸ•’ Ride in progress</p>
            <% end %>

            <% if Time.current < booking.start_time.in_time_zone - 30.minutes %>
              <%= button_to "Cancel", booking_path(booking), method: :delete,
                  form: { onsubmit: "return confirm('Are you sure you want to cancel this ride?');" },
                  class: "bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-3 rounded-lg mt-2 transition-all duration-200 shadow-md" %>
            <% end %>

            <div class="mt-2 bg-blue-900/30 border border-blue-500/30 rounded-lg p-2 text-center">
              <p id="countdown-<%= booking.id %>" class="text-blue-300 font-semibold italic">ğŸ•’ Starts soon...</p>
            </div>

            <script>
              document.addEventListener("DOMContentLoaded", function () {
                const countdownEl = document.getElementById("countdown-<%= booking.id %>");
                const rideStartTime = new Date("<%= booking.start_time.in_time_zone.iso8601 %>").getTime();

                function updateCountdown() {
                  const now = new Date().getTime();
                  const distance = rideStartTime - now;

                  if (distance <= 0) {
                    countdownEl.innerText = "ğŸš˜ Ride started!";
                    return;
                  }

                  const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                  const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                  const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                  const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                  if (days >= 1) {
                    countdownEl.innerText = `Starts in ${days} day${days > 1 ? 's' : ''}`;
                  } else if (hours >= 1) {
                    countdownEl.innerText = `Starts in ${hours}h ${minutes}m`;
                  } else {
                    countdownEl.innerText = `Starts in ${minutes}m ${seconds}s`;
                  }
                }

                updateCountdown();
                setInterval(updateCountdown, 1000);
              });
            </script>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if cancelled_ongoing.any? %>
    <details class="mb-6 rounded-lg p-4 bg-white bg-opacity-10">
      <summary class="cursor-pointer text-white font-medium mb-2">
        Show Cancelled Rides (<%= cancelled_ongoing.count %>)
      </summary>

      <div class="mt-3 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <% cancelled_ongoing.each do |booking| %>
          <div class="bg-gradient-to-br from-gray-800 via-gray-800 to-gray-800 border border-gray-700 rounded-2xl shadow-lg overflow-hidden text-sm text-gray-200 opacity-70">
            <div class="relative group">
              <% if booking.vehicle.image.attached? %>
                <%= image_tag booking.vehicle.image, class: "w-full h-44 object-cover border-b border-gray-700 rounded-t-2xl" %>
              <% else %>
                <div class="w-full h-44 bg-gray-600 flex items-center justify-center text-gray-400 border-b border-gray-700 rounded-t-2xl">
                  ğŸš˜ No Image
                </div>
              <% end %>
            </div>

            <div class="p-5 space-y-2">
              <div class="flex flex-wrap gap-2 mb-2">
                <span class="inline-block bg-gray-500/60 px-3 py-1 rounded-full text-gray-300 border border-gray-700">
                  ğŸš© <strong>From:</strong> <%= booking.start_location.humanize %>
                </span>
                <span class="inline-block bg-gray-500/60 px-3 py-1 rounded-full text-gray-300 border border-gray-700">
                  ğŸ <strong>To:</strong> <%= booking.end_location.humanize %>
                </span>
              </div>

              <p><strong class="text-gray-100">ğŸš˜ Vehicle:</strong> <%= booking.vehicle.model %></p>
              <p><strong class="text-gray-100">ğŸ‘¤ Customer:</strong> <%= booking.user.name %></p>
              <p><strong class="text-gray-100">ğŸ•“ Start:</strong> <%= booking.start_time.strftime("%d %b %Y, %I:%M %p") %></p>
              <p><strong class="text-gray-100">ğŸ’° Price:</strong> â‚¹<%= booking.price %></p>

              <% if booking.cancelled_at.present? %>
                <span class="inline-block bg-red-800/40 border border-red-500 text-red-400 font-semibold px-3 py-1 rounded-full">
                  âŒ Cancelled by <%= booking.cancelled_by.capitalize %>
                  <span class="text-xs block opacity-80">[<%= booking.cancelled_at.in_time_zone.strftime("%d %b %Y, %I:%M %p") %>]</span>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </details>
  <% end %>

  <% if active_ongoing.blank? && cancelled_ongoing.blank? %>
    <%= link_to "Back to Home", home_path,
          class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-1 px-3 rounded-md shadow-md no-underline transition-colors duration-200" %>
  <% end %>
</div>
