<div class="max-w-7xl mx-auto px-4 py-4 mt-6">
  <h1 class="text-2xl font-bold mb-6 text-white">Your Ride History</h1>

  <% if @completed.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% @completed.each do |booking| %>
        <div class="bg-gradient-to-br from-gray-800 via-gray-800 to-gray-800 border border-gray-700 rounded-2xl shadow-lg overflow-hidden transform hover:scale-[1.02] hover:shadow-2xl transition-all duration-300 text-sm text-gray-200">
          
          <!-- Vehicle Image -->
          <div class="relative group">
            <% if booking.vehicle.image.attached? %>
              <div class="overflow-hidden relative">
                <%= image_tag booking.vehicle.image, class: "w-full h-44 object-cover transition-transform duration-500 group-hover:scale-105 border-b border-gray-700" %>
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-black/20 to-transparent opacity-70 group-hover:opacity-80 transition-opacity duration-300 rounded-t-2xl"></div>
              </div>
            <% else %>
              <div class="w-full h-44 bg-gray-500 flex items-center justify-center text-gray-400 text-sm border-b border-gray-700 rounded-t-2xl">
                ğŸš˜ No Image Available
              </div>
            <% end %>
            <div class="absolute inset-0 rounded-t-2xl ring-1 ring-blue-400/10 group-hover:ring-blue-400/40 group-hover:shadow-[0_0_25px_rgba(56,189,248,0.3)] transition-all duration-500"></div>
          </div>

          <!-- Card Body -->
          <div class="p-5 flex flex-col flex-1 space-y-2">
            
            <div class="flex flex-wrap gap-2 mb-2">
              <span class="inline-block bg-gray-500/60 px-3 py-1 rounded-full text-gray-300 border border-gray-700">
                ğŸš© <strong>From:</strong> <%= booking.start_location.humanize %>
              </span>
              <span class="inline-block bg-gray-500/60 px-3 py-1 rounded-full text-gray-300 border border-gray-700">
                ğŸ <strong>To:</strong> <%= booking.end_location.humanize %>
              </span>
            </div>

            <p><strong class="text-gray-100">ğŸš˜ Vehicle:</strong> <%= booking.vehicle.model %></p>
            <p><strong class="text-gray-100">ğŸ•“ Date:</strong> <%= booking.start_time&.strftime('%d %b %Y, %I:%M %p') || "Not Started" %></p>
            <p><strong class="text-gray-100">ğŸ‘¨â€âœˆï¸ Driver:</strong> <%= booking.vehicle.driver.user.name %></p>
            <p><strong class="text-gray-100">ğŸ’° Price:</strong> â‚¹<%= booking.price %> 
              <span class="ml-2 bg-gray-700 px-2 py-1 rounded-full text-xs text-gray-300 border border-gray-600"><%= booking.payment.payment_type %></span>
            </p>

            <!-- Ratings -->
            <div class="mt-3 border-t border-gray-700 pt-3 space-y-2">
              <% ride_rating = booking.ratings.find_by(user_id: @user.id) %>
              <% if ride_rating %>
                <p><strong>â­ Ride Rating:</strong> <%= ride_rating.stars %> - <%= ride_rating.comments %></p>
                <div class="flex items-center space-x-2 mt-2">
                  <%= link_to "Edit", edit_rating_path(ride_rating), class: "text-xs bg-yellow-500 hover:bg-yellow-600 text-white py-1 px-2 rounded" %>
                  <%= button_to "Delete", rating_path(ride_rating), method: :delete,
                    form: { onsubmit: "return confirm('Are you sure you want to delete this ride rating?');" },
                    class: "text-xs bg-red-500 hover:bg-red-600 text-white py-1 px-2 rounded" %>
                </div>
              <% else %>
                <%= link_to "Rate Ride", new_rating_path(rateable_type: 'Booking', rateable_id: booking.id),
                  class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-1 px-2 rounded text-sm w-fit" %>
              <% end %>

              <% vehicle_rating = booking.vehicle.ratings.find_by(user_id: @user.id) %>
              <% if vehicle_rating %>
                <p><strong>â­ Vehicle Rating:</strong> <%= vehicle_rating.stars %> - <%= vehicle_rating.comments %></p>
                <div class="flex items-center space-x-2 mt-2">
                  <%= link_to "Edit", edit_rating_path(vehicle_rating), class: "text-xs bg-yellow-500 hover:bg-yellow-600 text-white py-1 px-2 rounded" %>
                  <%= button_to "Delete", rating_path(vehicle_rating), method: :delete,
                    form: { onsubmit: "return confirm('Are you sure you want to delete this vehicle rating?');" },
                    class: "text-xs bg-red-500 hover:bg-red-600 text-white py-1 px-2 rounded" %>
                </div>
              <% else %>
                <%= link_to "Rate Vehicle", new_rating_path(rateable_type: 'Vehicle', rateable_id: booking.vehicle_id),
                  class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-1 px-2 rounded text-sm w-fit" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-6 flex justify-center">
      <%= paginate @completed %>
    </div>

  <% else %>
    <p class="text-white mb-4">You have no completed rides...</p>
    <%= link_to "Start booking a ride", vehicles_path,
      class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded no-underline" %>
    <%= link_to "Go to bookings", bookings_path,
      class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded no-underline ml-2" %>
  <% end %>
</div>
