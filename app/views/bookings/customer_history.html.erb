<div class="max-w-7xl mx-auto px-4 py-4 mt-6">
  <h1 class="text-2xl font-bold mb-6 text-gray-800">Your Ride History</h1>

  <% if @completed.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      <% @completed.sort_by { |booking| booking.start_time || Time.zone.now }.reverse.each do |booking| %>
        <div class="bg-white border border-gray-300 rounded-lg shadow-sm flex flex-col text-sm">
          <% if booking.vehicle.image.attached? %>
            <%= image_tag booking.vehicle.image, class: "w-full h-40 object-cover rounded-t-lg" %>
          <% else %>
            <div class="w-full h-40 bg-gray-100 flex items-center justify-center text-gray-500 rounded-t-lg text-sm">
              No Image
            </div>
          <% end %>
          <div class="p-4 flex flex-col flex-1">
            <div class="flex flex-wrap gap-2 mb-2">
              <span class="inline-block bg-gray-100 px-3 py-1 rounded text-sm text-gray-600">
                <strong>From:</strong>  <%= booking.start_location.humanize %>
              </span>
              <span class="inline-block bg-gray-100 px-2 py-1 rounded text-sm text-gray-600">
                <strong>To:</strong>  <%= booking.end_location.humanize %>
              </span>
            </div>
            <h4 class="mb-1">
              <strong class="font-semibold text-gray-800">Date:</strong>
              <span class="text-gray-700">
                <%= booking.start_time&.strftime('%d %b %Y, %I:%M %p') || "Not Started" %>
              </span>
            </h4>
            <p class="mb-1"><strong class="font-semibold text-gray-800">Vehicle:</strong> <span class="text-gray-700"><%= booking.vehicle.model %></span></p>
            <p class="mb-1"><strong class="font-semibold text-gray-800">Driver:</strong> <span class="text-gray-700"><%= booking.vehicle.driver.user.name %></span></p>
            <p class="mb-1">
              <strong class="font-semibold text-gray-800">Price: </strong>
              <span class="text-gray-700">
                ₹<%= booking.price %>  <span class="inline-block bg-gray-100 px-3 py-1 rounded text-sm text-gray-600"> <%= booking.payment.payment_type %> </span>
              </span>
            </p>

            <div class="mt-4 border-t pt-4 border-gray-200 space-y-2">
              <% ride_rating = booking.ratings.find_by(user_id: @user.id) %>
              <% if ride_rating %>
                <p>
                  <strong class="font-semibold text-gray-800">Ride Rating:</strong>
                  <span class="text-gray-700">⭐ <%= ride_rating.stars %> - <%= ride_rating.comments %></span>
                </p>
                <div class="flex items-center space-x-2 mt-2">
                  <%= link_to "Edit", edit_rating_path(ride_rating), class: "text-xs bg-yellow-500 hover:bg-yellow-600 text-white py-1 px-2 rounded" %>
                  <%= button_to "Delete", rating_path(ride_rating), method: :delete, form: { onsubmit: "return confirm('Are you sure you want to delete this ride rating?');" }, class: "text-xs bg-red-500 hover:bg-red-600 text-white py-1 px-2 rounded" %>
                </div>
              <% else %>
                <%= link_to "Rate Ride", new_rating_path(rateable_type: 'Booking', rateable_id: booking.id), class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-1 px-2 rounded no-underline text-sm w-fit" %>
              <% end %>

              <% vehicle_rating = booking.vehicle.ratings.find_by(user_id: @user.id) %>
              <% if vehicle_rating %>
                <p>
                  <strong class="font-semibold text-gray-800">Vehicle Rating:</strong>
                  <span class="text-gray-700">⭐ <%= vehicle_rating.stars %> - <%= vehicle_rating.comments %></span>
                </p>
                <div class="flex items-center space-x-2 mt-2">
                  <%= link_to "Edit", edit_rating_path(vehicle_rating), class: "text-xs bg-yellow-500 hover:bg-yellow-600 text-white py-1 px-2 rounded" %>
                  <%= button_to "Delete", rating_path(vehicle_rating), method: :delete, form: { onsubmit: "return confirm('Are you sure you want to delete this vehicle rating?');" }, class: "text-xs bg-red-500 hover:bg-red-600 text-white py-1 px-2 rounded" %>
                </div>
              <% else %>
                <%= link_to "Rate Vehicle", new_rating_path(rateable_type: 'Vehicle', rateable_id: booking.vehicle_id), class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-1 px-2 rounded no-underline text-sm w-fit" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-700 mb-4">You have no completed rides...</p>
    <%= link_to "Start booking a ride", vehicles_path, class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded no-underline" %>
    <%= link_to "Go to bookings", bookings_path, class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded no-underline ml-2" %>
  <% end %>
</div>
