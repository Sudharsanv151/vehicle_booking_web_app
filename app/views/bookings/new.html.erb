<div class="flex flex-col items-center justify-center min-h-screen bg-gray-50 p-6">
  <div class="w-full max-w-xl bg-white p-8 rounded-lg shadow-md border border-gray-200">
    <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Book Vehicle: <span class="text-blue-600"><%= @vehicle.model %></span></h1>

    <%= form_with model: @booking, url: bookings_path, local: true, class: "space-y-5" do |f| %>
      <%= f.hidden_field :vehicle_id, value: @vehicle.id %>

      <div>
        <%= f.label :start_location, "Start Location:", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :start_location, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :end_location, "End Location:", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :end_location, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :start_time, "Start Time:", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <div class="mt-1 flex flex-wrap gap-2">
          <%= f.datetime_select :start_time, {}, class: "block px-2 py-1 =border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.label :price, "Price:", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.number_field :price, step: 0.01, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <%= f.submit "Confirm Booking", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2.5 px-4 rounded-md shadow-md text-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200 cursor-pointer" %>
    <% end %>
  </div>
</div>