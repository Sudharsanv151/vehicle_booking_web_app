<div class="container mx-auto px-4 py-8">
  <h2 class="text-3xl font-bold text-white mb-6">Completed Rides</h2>

  <div class="space-y-4"> 
    <% @completed.each do |booking| %>
      <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
        <div class="flex flex-wrap gap-2 mb-1">
          <span class="inline-block bg-gray-100 px-3 py-1 rounded text-sm text-gray-600">
            <strong>From:</strong> <%= booking.start_location.humanize %>
          </span>
          <span class="inline-block bg-gray-100 px-3 py-1 rounded text-sm text-gray-600">
            <strong>To:</strong> <%= booking.end_location.humanize %>
          </span>
        </div>
        <p class="text-gray-800 text-lg mb-2">
          <strong class="font-bold"><%= booking.vehicle.model %></strong>
        </p>

        <% rating = booking.ratings.find_by(user_id: @user.id) %>
        <% if rating %>
          <div class="mt-4 pt-4 border-t border-gray-200">
            <p class="text-gray-700">
              <span class="text-yellow-500">‚≠ê <%= rating.stars %></span>: <%= rating.comments %>
            </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>