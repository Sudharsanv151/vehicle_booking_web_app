<div class="container mx-auto px-4 py-8">
  <h2 class="text-3xl font-bold text-gray-800 mb-6">Completed Rides</h2>

  <div class="space-y-4"> <%# Adds vertical space between each ride card %>
    <% @completed.each do |booking| %>
      <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
        <p class="text-gray-800 text-lg mb-2">
          <strong class="font-bold"><%= booking.vehicle.model %>:</strong>
          <span class="font-medium"><%= booking.start_location %> &rarr; <%= booking.end_location %></span>
        </p>

        <% rating = booking.ratings.find_by(user_id: @user.id) %>
        <% if rating %>
          <div class="mt-4 pt-4 border-t border-gray-200"> <%# Separator for rating section %>
            <p class="text-gray-700">
              <span class="text-yellow-500">â­ <%= rating.stars %></span>: <%= rating.comments %>
            </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>