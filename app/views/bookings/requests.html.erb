<div class="p-10">
  <h2 class="text-2xl font-bold text-gray-800 mb-6">Pending Booking Requests</h2>

  <% if @requests.blank? %>
    <div>
      <p class="text-gray-700 text-md mb-4">You haven't received any booking requests yet.</p>
      <%= link_to "Back to Home", home_path, class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2.5 px-6 rounded-md shadow-md no-underline transition-colors duration-200" %>
    </div>
  <% else %>
    <div class="space-y-6"> 
      <% @requests.each do |booking| %>
        <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
          <h3 class="text-xl font-bold text-gray-800 mb-3"><%= booking.vehicle.model.capitalize %></h3>

          <div class="text-gray-700 space-y-1 mb-4"> 
            <p><strong class="font-semibold">Customer name:</strong> <%= booking.user.name %></p>
            <p><strong class="font-semibold">Date & Time:</strong> <%= booking.start_time.strftime('%d-%b-%Y %I:%M %p') %></p>
            <p><strong class="font-semibold">From:</strong> <%= booking.start_location%></p>
            <p><strong class="font-semibold">To:</strong> <%= booking.end_location%></p>
            <p><strong class="font-semibold">Price:</strong> <span class="font-medium text-green-600">â‚¹<%= booking.price %></span></p>
            <p><strong class="font-semibold">Mobile no:</strong> <%= booking.user&.mobile_no%></p>
          </div>

          <div class="flex space-x-3 mt-4 pt-4 border-t border-gray-200"> 
            <%= button_to "Accept", accept_booking_path(booking), method: :patch, class: "flex-1 bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-md shadow-sm no-underline transition-colors duration-200 text-center" %>
            <%= button_to "Reject", reject_booking_path(booking), method: :patch,
              form: { onsubmit: "return confirm('Are you sure you want to reject this?');" },
              class: "flex-1 bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-md shadow-sm no-underline transition-colors duration-200 text-center" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>