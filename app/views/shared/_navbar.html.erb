<nav class="backdrop-blur-md bg-gradient-to-r from-slate-900/90 via-gray-800/90 to-slate-900/90 border-b border-gray-700 shadow-[0_4px_30px_rgba(0,0,0,0.4)] py-4">
  <div class="container mx-auto flex items-center justify-between px-6">

    <!-- Brand -->
    <div class="flex items-center space-x-3">
      <%= link_to home_path, class: "flex items-center space-x-2" do %>
        <span class="text-3xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-cyan-300 to-teal-400 hover:opacity-90 transition duration-300">RideBooker</span>
      <% end %>

      <% if user_signed_in? %>
        <% if current_user.userable_type == "Customer" %>
          <span class="bg-blue-100/20 text-blue-300 text-xs font-semibold px-3 py-1 rounded-full border border-blue-400/30">Customer</span>
        <% elsif current_user.userable_type == "Driver" %>
          <span class="bg-green-100/20 text-green-300 text-xs font-semibold px-3 py-1 rounded-full border border-green-400/30">Driver</span>
        <% end %>
      <% end %>
    </div>

    <!-- Links -->
    <div class="flex items-center space-x-7">
      <% if user_signed_in? %>
        <% user = current_user %>

        <% if user.userable_type == "Customer" %>
          <%= link_to "Book a Trip", vehicles_path, class: "text-gray-200 hover:text-blue-400 font-semibold tracking-wide transition-all duration-300 hover:drop-shadow-[0_0_6px_rgba(56,189,248,0.7)]" %>
          <%= link_to "My Bookings", bookings_path, class: "text-gray-200 hover:text-blue-400 font-semibold tracking-wide transition-all duration-300 hover:drop-shadow-[0_0_6px_rgba(56,189,248,0.7)]" %>
          <%= link_to "Ride History", customer_ride_history_path, class: "text-gray-200 hover:text-blue-400 font-semibold tracking-wide transition-all duration-300 hover:drop-shadow-[0_0_6px_rgba(56,189,248,0.7)]" %>
          <%= link_to "Profile", profile_path, class: "text-gray-200 hover:text-blue-400 font-semibold tracking-wide transition-all duration-300 hover:drop-shadow-[0_0_6px_rgba(56,189,248,0.7)]" %>
        <% else %>
          <%= link_to "Manage Vehicles", driver_vehicles_path, class: "text-gray-200 hover:text-green-400 font-semibold tracking-wide transition-all duration-300 hover:drop-shadow-[0_0_6px_rgba(74,222,128,0.7)]" %>
          <%= link_to "Ride Requests", booking_requests_path, class: "text-gray-200 hover:text-green-400 font-semibold tracking-wide transition-all duration-300 hover:drop-shadow-[0_0_6px_rgba(74,222,128,0.7)]" %>
          <%= link_to "Booked Rides", driver_ongoing_path, class: "text-gray-200 hover:text-green-400 font-semibold tracking-wide transition-all duration-300 hover:drop-shadow-[0_0_6px_rgba(74,222,128,0.7)]" %>
          <%= link_to "Ride History", driver_ride_history_path, class: "text-gray-200 hover:text-green-400 font-semibold tracking-wide transition-all duration-300 hover:drop-shadow-[0_0_6px_rgba(74,222,128,0.7)]" %>
          <%= link_to "Profile", profile_path, class: "text-gray-200 hover:text-green-400 font-semibold tracking-wide transition-all duration-300 hover:drop-shadow-[0_0_6px_rgba(74,222,128,0.7)]" %>
        <% end %>

        <%= button_to "Logout", select_role_path, method: :get,
              form: { onsubmit: "return confirm('Are you sure you want to logout?');", class: "inline" },
              class: "bg-gradient-to-r from-red-600 to-red-700 hover:from-red-500 hover:to-red-600 text-white font-semibold py-1.5 px-5 rounded-full shadow-md hover:shadow-red-500/40 transition-all duration-300 transform hover:scale-105" %>
      <% end %>
    </div>
  </div>
</nav>
