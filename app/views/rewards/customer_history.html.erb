<div class="m-10">
  <h1 class="text-3xl font-bold text-white mb-6">Reward History</h1>

  <% if @rewards.any? %>
    <table class="min-w-full bg-white border border-gray-300 bg-opacity-10 shadow-md rounded">
      <thead>
        <tr class="bg-gray-100 bg-opacity-50 text-left text-sm font-semibold">
          <th class="py-3 px-4 border-b">Date</th>
          <th class="py-3 px-4 border-b">Points</th>
          <th class="py-3 px-4 border-b">Reward Type</th>
        </tr>
      </thead>
      <tbody class="text-white">
        <% @rewards.each do |reward| %>
          <tr class="hover:bg-gray-600 bg-opacity-10">
            <td class="py-3 px-4 border-b"><%= reward.created_at.strftime("%d %b %Y") %></td>
            <td class="py-3 px-4 border-b"><%= reward.points %></td>
            <td class="py-3 px-4 border-b"><%= reward.reward_type %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="mt-6 flex justify-center">
      <%= paginate @rewards%>
    </div>
  <% else %>
    <p class="text-white">No rewards earned yet.</p>
  <% end %>

  <div class="mt-6">
    <%= link_to "Back to Profile", profile_path , class: "text-blue-300 hover:underline" %>
  </div>
</div>
